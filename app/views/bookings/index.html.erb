<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-8 mx-auto">
        <ul class="list-group mb-3">
          <% if @bookings_as_visitor.any? %>
            <h2 class="title-dashboard">Vos réservations de vans</h2>
            <% @bookings_as_visitor.each do |booking| %>
              <%= render booking, booking: booking, booking_type: "visitor" %>
            <% end %>
          <% else %>
            <div class="fallback-container">
              <div class="fallback-container-infos col-4">
                <p>Vous n'avez aucune réservation en cours. Découvrez notre offre de vans.</p>
                <%= link_to "Découvrir", vans_path, class: "btn btn-flat" %>
              </div>
              <img src="https://res.cloudinary.com/dhyuv86iu/image/upload/v1741188996/jikun-li-Xeg4GZFc1IQ-unsplash_cgoixa.jpg" width="auto" height="auto" class="fallback-container-img">
            </div>
          <% end %>
        </ul>
      </div>

    <div class="col-xs-12 col-sm-10 mt-5">
      <h2 class="title-dashboard">Vos vans</h1>
      <ul class="list-group mb-3">
        <% @bookings_as_owner.each do |booking| %>
          <%= render booking, booking: booking, booking_type: "owner" %>
        <% end %>
        <% if @available_vans.any? %>
          <% @available_vans.each do |van| %>
          <%= render 'vans/available_vans', van: van %>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
