<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-10 mx-auto">
      <h1 class="title-dashboard">Vos réservations de vans</h1>
      <ul class="list-group mb-3">
        <% @bookings_as_visitor.each do |booking| %>
          <%= link_to booking_path(booking), class: "plain" do %>
          <%= render booking, booking: booking, booking_type: "visitor" %>
          <% end %>
        <% end %>
      </ul>
    </div>

    <div class="col-xs-12 col-sm-10 mt-5">
      <h1 class="title-dashboard">Vos vans loués</h1>
      <ul class="list-group mb-3">
        <% @bookings_as_owner.each do |booking| %>
          <%= render booking, booking: booking, booking_type: "owner" %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
