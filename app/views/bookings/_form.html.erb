<%= simple_form_for([@van, @booking],
                    html: {
                      data: {
                        controller: 'flatpickr',
                        flatpickr_price_value: @van.price
                      }
                    }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
   <%= f.input :start_date, label: "Date de début",
      as: :string,
      input_html: {
      data: {
        flatpickr_target: 'startDateInput',
      }
    } %>
    <%= f.input :end_date, label: "Date de fin",
      as: :string,
      input_html: {
      data: {
        flatpickr_target: 'endDateInput',
      }
    } %>
  </div>

  <p id="final_price" data-flatpickr-target="price">Montant TOTAL : <strong><%= @van.price %> €</strong></p>

  <%= f.button :submit, "Réserver ce van", class: "ms-2 btn btn-flat "%>

<% end %>
