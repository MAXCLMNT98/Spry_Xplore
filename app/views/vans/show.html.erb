<div class="container">
  <div class="van-container">
    <h2><%= @van.model%></h2>
    <% if @van.photo.attached? %>
      <%= cl_image_tag @van.photo.key, class: "van-img"%>
    <% elsif @van.image_url.present?%>
      <img src="<%= @van.image_url %>" class="van-img" alt="van">
    <% else %>
      <img src="https://res.cloudinary.com/dexzpdaju/image/upload/v1741106361/vw_hdryrk.webp" width="auto" height="auto" class="van-img">
    <% end %>
    
    <div class="details-card">
      <p>Fuel: <%= @van.fuel %></p>
      <p>Price: <%= @van.price %>€ per day</p>
      <% if @van.surface? %>
        <p>Surface: <%= @van.surface %>㎡</p>
      <% end %>
      <h3>Reserver le van <%= @van.model%></h3>
      <%= render "bookings/form", booking: @booking %>
    </div>


  </div>
  <div>
    <%= link_to "Retour", vans_path, class: "btn btn-secondary" %>
  </div>
</div>
